.choices-list
  border: 1px solid #ccc
  width: 200px
  height: 150px
  position: relative
  overflow: auto
  font-family: Menlo, monospace
  font-size: 14px
  padding: 0
  list-style-type: none

  .item
    padding 8px 16px
    border-bottom: 1px solid #eee

  .item-hover
    background: #eee

  .item-spinner
    padding 0
    height: 40px
    border-bottom: none
    background: url('../images/choices/spinner.gif') 50% 50% no-repeat;

  ::-webkit-scrollbar
    width: 9px
    height: 9px
